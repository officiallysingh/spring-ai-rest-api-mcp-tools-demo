{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI definition",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:8092",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/v1/airline/bookings/{pnr}/cancel": {
      "put": {
        "summary": "Cancels a Flight booking by PNR",
        "operationId": "cancel-booking-by-pnr",
        "parameters": [
          {
            "name": "pnr",
            "in": "path",
            "description": "PNR",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "BA026"
          }
        ]
      }
    },
    "/v1/airline/flights": {
      "post": {
        "summary": "Search available flights as per simple search criteria.",
        "operationId": "search-flights",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AirShopRequest"
              }
            }
          },
          "required": true
        }
      }
    },
    "/v1/airline/bookings": {
      "get": {
        "summary": "Search Bookings",
        "operationId": "search-bookings",
        "parameters": [
          {
            "name": "bookingStatus",
            "in": "query",
            "description": "Booking status. Allowed values CONFIRMED, CANCELLED, PENDING",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "CONFIRMED",
                "CANCELLED",
                "PENDING"
              ]
            },
            "example": "PENDING"
          }
        ]
      },
      "post": {
        "summary": "Book a Flight",
        "operationId": "book-flight",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookingRequest"
              }
            }
          },
          "required": true
        }
      }
    },
    "/v1/airline/bookings/{pnr}/services": {
      "post": {
        "summary": "Add requested Service to Flight Booking",
        "operationId": "add-service-to-booking",
        "parameters": [
          {
            "name": "pnr",
            "in": "path",
            "description": "PNR",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "BA026"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddServiceRequest"
              }
            }
          },
          "required": true
        }
      }
    },
    "/v1/airline/bookings/{pnr}": {
      "get": {
        "summary": "Gets a Flight booking by PNR",
        "operationId": "get-booking-by-pnr",
        "parameters": [
          {
            "name": "pnr",
            "in": "path",
            "description": "PNR",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "BA026"
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "APIResponseObject": {
        "type": "object",
        "properties": {
          "errorCount": {
            "type": "integer",
            "format": "int32"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        }
      },
      "AirShopRequest": {
        "type": "object",
        "description": "Search Flight request",
        "properties": {
          "origin": {
            "type": "string",
            "description": "Departure airport",
            "enum": [
              "JFK",
              "LAX",
              "DEL",
              "BOM"
            ],
            "example": "DEL"
          },
          "destination": {
            "type": "string",
            "description": "Arrival airport",
            "enum": [
              "JFK",
              "LAX",
              "DEL",
              "BOM"
            ],
            "example": "JFK"
          },
          "departureDate": {
            "type": "string",
            "format": "date",
            "description": "Departure Date",
            "example": "2025-04-21"
          }
        },
        "required": [
          "departureDate",
          "destination",
          "origin"
        ]
      },
      "BookingRequest": {
        "type": "object",
        "description": "Book Flight request",
        "properties": {
          "flightNumber": {
            "type": "string",
            "description": "Flight number",
            "example": 60000000
          },
          "passengers": {
            "type": "array",
            "description": "List of Passenger details",
            "items": {
              "$ref": "#/components/schemas/Passenger"
            }
          }
        },
        "required": [
          "flightNumber",
          "passengers"
        ]
      },
      "Passenger": {
        "type": "object",
        "description": "Passenger details",
        "properties": {
          "firstName": {
            "type": "string",
            "description": "Passenger First name",
            "example": "Rajveer"
          },
          "lastName": {
            "type": "string",
            "description": "Passenger Last name",
            "example": "Singh"
          },
          "type": {
            "type": "string",
            "description": "Passenger type, Adult or Child",
            "enum": [
              "ADULT",
              "CHILD"
            ],
            "example": "ADULT"
          }
        },
        "required": [
          "firstName",
          "lastName",
          "type"
        ]
      },
      "AddServiceRequest": {
        "type": "object",
        "description": "Add Service request",
        "properties": {
          "service": {
            "type": "string",
            "description": "Service",
            "enum": [
              "BAG",
              "BAG_ADDITIONAL",
              "MEAL",
              "PRIORITY_BOARDING",
              "LOUNGE_ACCESS"
            ]
          }
        },
        "required": [
          "service"
        ]
      }
    }
  }
}